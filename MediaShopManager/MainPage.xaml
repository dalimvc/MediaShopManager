<Page
    x:Class="MediaShopManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MediaShopManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition  Height="1*"/>
            <RowDefinition  Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome to Media Store Manager" Grid.Row="0" FontSize="28" HorizontalAlignment="Center" Margin="0 150 0 0"/>
        <TextBlock Text="Please select a property you wish to access!" Grid.Row="1" FontSize="24" HorizontalAlignment="Center"/>
        <Button Content="Cashier Manager" Click="ViewButtonCashierManager" Margin="0,-550,180,0" Grid.Row="2" FontSize="17" HorizontalAlignment="Center" Background="#7395b2"/>
        <Button Content="Warehouse Manager" Click="ViewButtonWarehouseManager" Margin="180,-550,0,0" Grid.Row="2" FontSize="17" HorizontalAlignment="Center" Background="#7395b2"/>
    </Grid>
</Page>
